{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,                   
      "emitDecoratorMetadata": true,   
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }